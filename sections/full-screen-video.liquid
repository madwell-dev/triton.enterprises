<style>
  .full-width-video {
    height: 0px;
    padding-top: 56.25%;
    position: relative;
    width: 100%;
  }

  .full-width-video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .full-width-video h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 2rem;
    text-align: center;
    z-index: 1;
  }
</style>

<section class="full-width-video">
  <h1>Villains for Good.</h1>
  <iframe 
    src="https://player.vimeo.com/video/989018912?background=1&autoplay=1&loop=1&muted=1&byline=0&title=0" 
    frameborder="0" 
    allow="autoplay; fullscreen; picture-in-picture" 
    allowfullscreen>
  </iframe>
</section>

