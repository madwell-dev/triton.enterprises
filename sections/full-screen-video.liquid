<style>
  .full-width-video {
    height: 0px;
    padding-top: 56.25%;
    position: relative;
    width: 100%;
  }

  .full-width-video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .full-width-video .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 32px;
    z-index: 1;
  }

  .full-width-video h1 {
    margin: 0;
    color: white;
    text-align: center;
    z-index: 1;
    text-transform: uppercase;
    font-family: "metallophile-sp8";
    font-size: 54px;
    font-weight: 700;
  }

  #go-to-shop {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    padding-inline: 40px;
    height: 48px;
    color: white;
    text-align: center;
    line-height: 1.4;
    text-decoration: none;
    font-family: "metallophile-sp8";
    font-weight: bold;
    border-radius: 35px;
    background-color: #343036;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease-in-out;
    z-index: 1;
  }

  #go-to-shop:hover, 
  #go-to-shop:active {
    background-color: rgba(237, 113, 23, 0.95);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }
</style>

<section class="full-width-video">
  <div class="hero-content">
    <h1>Villains for Good.</h1>
    <a href="/collections/all" id="go-to-shop">Go to Shop</a>
  </div>
  <iframe 
    src="https://player.vimeo.com/video/989018912?background=1&autoplay=1&loop=1&muted=1&byline=0&title=0" 
    frameborder="0" 
    allow="autoplay; fullscreen; picture-in-picture" 
    allowfullscreen>
  </iframe>
</section>

