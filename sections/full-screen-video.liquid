<style>
  .full-width-video {
    width: 100%;
    background: #000;
    position: relative;
  }

  .full-width-video .video-container {
    height: 0px;
    padding-top: 56.25%;
    position: relative;
    overflow: hidden;
    margin-bottom: -85px;
  }

  .full-width-video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .full-width-video .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 32px;
    z-index: 1;
  }

  .full-width-video h1 {
    margin: 0;
    color: white;
    text-align: center;
    z-index: 1;
    text-transform: uppercase;
    font-family: "metallophile-sp8";
    font-size: 54px;
    font-weight: 700;
    line-height: 1;
  }

  #go-to-shop {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    padding-inline: 40px;
    height: 48px;
    color: white;
    text-align: center;
    line-height: 1.4;
    text-decoration: none;
    font-family: "metallophile-sp8";
    font-weight: bold;
    border-radius: 35px;
    background-color: #343036;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease-in-out;
    z-index: 1;
  }

  #go-to-shop:hover, 
  #go-to-shop:active {
    background-color: rgba(237, 113, 23, 0.95);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }

  a.bolt {
    position: sticky;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background: transparent;
    border: 0px;
    z-index: 2;
    display: inline-flex;
  }

  @media (max-width: 900px) {
    .full-width-video .video-container {
      padding-top: 80%;
    }

    .full-width-video iframe {
      width: 150%;
      height: 100%;
      transform: translateX(-16.5%);
    }
  }
  @media (max-width: 600px) {
    .full-width-video .video-container {
      padding-top: 120%;
    }

    .full-width-video iframe {
      width: 250%;
      transform: translateX(-30%);
    }
  }
  @media (max-width: 360px) {
    .full-width-video h1 {
      font-size: 40px;
    }
    .full-width-video .hero-content {
      margin-top: 32px;
      row-gap: 16px;
    }
  }
</style>

<section class="full-width-video">
  <div class="video-container">
    <iframe 
      src="https://player.vimeo.com/video/989018912?background=1&autoplay=1&loop=1&muted=1&byline=0&title=0" 
      frameborder="0" 
      allow="autoplay; fullscreen; picture-in-picture" 
      allowfullscreen>
    </iframe>
  </div>

  <div class="hero-content">
    <h1>VILLAINS FOR GOODâ„¢</h1>
  </div>

  <a class="bolt" href="#shopify-section-template--23114277224758__featured_collection">
    {%- render 'icon-bolt' -%}
  </a>
</section>

